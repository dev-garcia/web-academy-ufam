{
    "compilerOptions": {
        "target": "es6",
        "module": "none",
        "outFile": "./dist/app.js",
        "sourceMap": false, // esse carinha aqui é muito bom, não sabia que podiamos ler o código ts pelo devTools do navegador
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "removeComments": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "./node_modules/*",
        "dist"
    ]
}